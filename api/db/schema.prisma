generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // url = "sqlserver://192.168.0.104\\TEST;instance=TEST;database=Sec2023;user=hwn83;password=nwH83;TrustServerCertificate=true;encrypt=false;"
}

model Post {
  id        Int        @id @unique
  title     String?
  content   String?
  User      User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int?
  category  Category[]
  comment   Comment[]
  postLikes PostLike[]
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String?
  posts Post[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  posts Post[]
}

model Comment {
  id      Int    @id @default(autoincrement())
  content String
  post    Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId  Int
}

model PostLike {
  id        Int  @id @default(autoincrement())
  postId    Int  @unique @map("post_id")
  likeCount Int  @default(0)
  post      Post @relation(fields: [postId], references: [id], onDelete: Cascade)
}

